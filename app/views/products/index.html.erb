<div class="container mt-3">

  <p style="color: green"><%= notice %></p>
  <div class="row d-lg-none d-xl-none">
    <p class="d-flex justify-content-between">
    <a class="btn btn-primary btn-sm collapseExample" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
      Categorias >
    </a>
    <%= link_to "Nuevo producto +", new_product_path, class:"btn btn-success btn-sm" %>
    <div class="collapse" id="collapseExample">
      <div class="card card-body">
        <div class="row">
          <% @categories.each do |category| %>
            <%= link_to category.title, category_path(category), class:"collapsed-items btn btn-sm btn-primary" %>
          <% end %>
        </div>

      </div>
    </div>
  </div>


  <div class="row">
    <div class="col-12 col-lg-9">
      <h2>Products</h2>
      <div class="">

        <div id="products" class="row">
          <% @products.first(20).each do |product| %>
            <div class="col-12 col-md-12 col-lg-6">
              <div class="card p-3 m-3 card-hovered">
                <%= render product %>
                <%= line_chart product.prices.group(:updated_at).sum(:price), suffix: "$" %>
                <%= link_to "Ver producto", product, class:'btn btn-primary mt-3' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-3 d-none d-sm-block d-md-none d-lg-block sticked-side">
      <h2>Categorias</h2>
      <div class="row">
        <% @categories.each do |category| %>
        <div class="col-lg-12 mb-2">
          <%= link_to category.title, category_path(category), class:"attributes-size btn btn-sm btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</div>

<script>
  document.querySelector(".collapseExample").addEventListener("click", console.log("je"))
</script>

<style>

  .sticked-side {
    height: 100vh;
    position: sticky;
    top: 0;
  }
</style>