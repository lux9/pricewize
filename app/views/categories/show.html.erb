<div class="container">
  <h1><%= @category.title %></h1>

  <div class="row">
      <div class="col-12 col-lg-9">
        <%= paginate @products %>
        <h2>Products</h2>
        <div class="">

          <div id="products" class="row">
            <% @products.first(20).each do |product| %>
              <div class="col-12 col-md-12 col-lg-6">
                <div class="card p-3 m-3 card-hovered">
                  <%= render product %>
                  <%= line_chart product.prices.group(:updated_at).sum(:price), suffix: "$" %>
                  <%= link_to "Ver producto", product, class:'btn btn-primary mt-3' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <%= paginate @products %>
      </div>
  <%= link_to "Volver Inicio", products_path, class:'btn btn-primary' %>
</div>
